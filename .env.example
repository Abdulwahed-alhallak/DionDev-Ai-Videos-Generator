# قاعدة البيانات - Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dar_abi_alfadaa_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT السرية - JWT Secret
JWT_SECRET=your_very_strong_secret_key_here
JWT_EXPIRY=24h

# الخادم - Server
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# البريد الإلكتروني - Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# رفع الملفات - File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# النسخ الاحتياطي - Backup
BACKUP_DIR=./backups
BACKUP_SCHEDULE=0 2 * * *

# Elasticsearch (اختياري - Optional)
ELASTICSEARCH_NODE=http://localhost:9200

# AWS S3 (اختياري - Optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_REGION=us-east-1
AWS_BUCKET_NAME=dar-abi-alfadaa-backups

# إعدادات النظام - System Settings
SYSTEM_NAME=دار أبي الفداء للعلوم الشرعية
SYSTEM_CITY=حماة، سوريا
SYSTEM_PHONE=+963-XX-XXXXXXX
SYSTEM_EMAIL=info@dar-abi-alfadaa.sy
